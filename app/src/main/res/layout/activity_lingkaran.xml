<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5DFC6"
    android:padding="40dp"
    tools:context=".lingkaran">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/whitebg"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/baloo_paaji"
          android:text="Lingkaran"
          android:textAlignment="center"
          android:textColor="#618A62"
          android:textSize="35dp" />

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:layout_marginTop="5dp"
          app:srcCompat="@drawable/lingkaran" />

      <EditText
          android:id="@+id/jarijari"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="35dp"
          android:layout_marginTop="30dp"
          android:layout_marginEnd="35dp"
          android:layout_marginBottom="30dp"
          android:ems="10"
          android:hint="masukkan jari-jari"
          android:inputType="number"
          android:textAlignment="center" />

      <Button
          android:id="@+id/btnhasilling"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="30dp"
          android:layout_marginEnd="30dp"
          android:layout_marginBottom="30dp"
          android:backgroundTint="#618A62"
          android:text="hitung"
          app:cornerRadius="10dp" />

      <TextView
          android:id="@+id/hasilhitungling"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:textSize="15dp" />

    </LinearLayout>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>